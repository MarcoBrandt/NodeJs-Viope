doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
  body
    div.container
        h1 New customer
        form(action='/addcustomer', method='POST')
            div
                input(type="text", name="firstname", placeholder="firstname", required="required")
            div
                input(type="text", name="lastname", placeholder="lastname", required="required")
            div
                input(type="text", name="email", placeholder="email", required="required") 
            div
                input(type="text", name="phone", placeholder="phone", required="required") 
            div
                input(type="submit", value="Add").btn.btn-primary